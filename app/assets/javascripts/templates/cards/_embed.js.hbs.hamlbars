{{#if view.embed}}
%div
  {{#if view.embed.html}}
  {{view.content.htmlContent}}
  {{else}}
  %img{:bind => {:src => 'view.embed.embedUrl'}}
  {{/if}}
%p.text
  {{view.content.content}}
%p.text
  = _('From ')
  %a{:bind => {:href => 'view.content.url'}}
    {{www_domain view.content.url}}
    {{#if view.embed.authorName}}
    = _('by')
    {{view.embed.authorName}}
    {{/if}}
{{else}}
%p.text
  = _('Provided link has no support for oEmbed.')
{{/if}}
