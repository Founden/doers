%form{:bind => {:id => 'view.content.editSlug'}}
  %fieldset
    .actions
      {{#view view.cancelButtonView}}
      = _('Cancel')
      {{/view}}
      {{#view view.saveButtonView}}
      = _('Save')
      {{/view}}
    .field.title
      {{input type='text' valueBinding='view.content.title' placeholder='Give it a nice title' required='true'}}
    .field.url
      {{input type='text' valueBinding='view.content.url' placeholder='http://...' required='true'}}
    .field.oembed
      %em
        {{#if view.embed}}
        = _('Found:')
        {{view.content.content}}
        = _('at')
        {{website view.content.url}}
        {{else}}
        = _('Provided link has no support for oEmbed. Try again.')
        {{/if}}
