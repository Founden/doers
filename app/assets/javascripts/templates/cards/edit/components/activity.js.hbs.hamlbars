.card-activity

  %ul.card-activity-list
    {{#each activities}}
    %li.card-comment
      %img{:class => 'card-comment-user-image', :bind => {:src => 'user.avatarUrl'}}
      .card-comment-date
        {{lastUpdate}}
      .card-comment-content
        %strong
          {{user.nicename}}:
        = Faker::Lorem.paragraph
    %li.card-activity-log
      %strong
        {{user.nicename}}
      = _('updated the card.')
      {{lastUpdate}}
    {{/each}}

  .card-comment-new
    {{textarea class='card-comment-new-text' placeholder='Write a comment...' rows='4' name='comment'}}
    .card-comment-new-actions
      %button.button.secondary
        %span.icon.icon-comment
        = _('Comment')
      = _('Tab + Enter to Submit.')
