{{#with view.content}}
{{partial 'cards/components/user'}}
.card-wrap
  .card-edit
    .card-field
      {{input type='text' class='card-field-title' valueBinding='title' placeholder='Type your sugestion title...' name='title'}}
    .card-attachment
      .card-search
        %label
          = _('Type link address')
        .card-search-field
          {{input type='text' valueBinding='url' action='update' placeholder='Type or paste a link here' name='url'}}
          .icon.icon-link.medium
      {{#if embed}}
      .card-embed
        %img.card-embed-image{:bind => {:src => 'embed.mediaUrl'}}
        .card-embed-title
          {{embed.title}}
        .card-embed-author
          = _('By')
          {{embed.authorName}}
      {{/if}}
    {{partial 'cards/components/actions'}}
  {{partial 'cards/components/endorses'}}
{{/with}}
