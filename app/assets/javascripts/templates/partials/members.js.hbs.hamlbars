%ul.member-list
  {{#each member in content.memberships}}
  %li.member-item
    %img.member-item-image{:bind => {:src => 'member.user.avatarUrl'}}
  {{/each}}
  {{#view view.addItemView}}
  {{#view view.addButtonView}}
  %span.icon.icon-plus
  {{/view}}
  {{#if view.isActive}}
  .member-item-add-form
    {{input placeholder='Email address' type='email' name='email'}}
    %button.button.compact
      %span.icon.icon-mail
  {{/if}}
  {{/view}}
