.card-endorses
  {{#unless isNew}}
  %h4
    = _('Endorsements')
  %ul
    {{#each endorse in endorses}}
    %li.card-endorse-item
      %img{:class => 'card-endorse-image', :bind => {:src => 'endorse.user.avatarUrl'}}
    {{/each}}
    {{#if controller.userEndorse}}
    %li
      .icon.icon-close.remove-endorse{:_action => 'removeEndorse'}
    {{else}}
    %li
      .icon.icon-plus.add-endorse{:_action => 'addEndorse'}
    {{/if}}
  .button.btn-small.toggle-alignment{:_action => 'toggleAlignment'}
    {{#if alignment}}
    = _('Mark as unaligned')
    {{else}}
    = _('Mark as aligned')
    {{/if}}
  {{/unless}}
