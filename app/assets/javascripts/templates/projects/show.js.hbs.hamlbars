.main-content-wrap

  .project{:bind => {:id => 'content.slug'}}
    %h1.project-title
      {{content.title}}
    .project-description
      {{content.description}}
    %ul.project-users
      %li.project-users-item
        %img.project-users-item-image{:bind => {:src => 'content.user.avatarUrl'}}
      %li.project-users-item
        %a.project-users-item-add{:href => '#'}

  {{#if content.boards}}
  .boards
    {{#each content.boards}}
    .boards-item{:bind => {:id => 'slug'}}
      .boards-item-cover
        %h3.boards-item-cover-title
          {{title}}
      .boards-item-progress
        .boards-item-progress-bar
      .boards-item-user
        %img.boards-item-user-image{:bind => {:src => 'user.avatarUrl'}}
        %span.boards-item-user-activity
        = _('updated')
        {{lastUpdate}}
        = _('by')
        {{user.nicename}}
    {{/each}}
  {{/if}}
