#project

  .row
    .large-8.large-offset-2.columns.end
      %h1.align-center
        = _('Create a new project')

  .row
    .large-8.large-offset-2.columns.panel
      .row
        .large-12.columns.split-none

          %form#project-new{:_action => 'save view on="submit"'}
            .row
              .hide.on-error
                = _('Name is missing.')
              .large-3.columns
                %label.right.inline{:for => :titleInput}
                  = _('Name')
              .large-9.columns.end
                {{view Ember.TextField valueBinding='content.title' id='titleInput' placeholder='Give it a nice name' required='true'}}

            .row
              .hide.on-error
                = _('Website is missing.')
              .large-3.columns
                %label.right.inline{:for => :wwwInput}
                  = _('Website')
              .large-9.columns.end
                {{view Ember.TextField valueBinding='content.website' id='wwwInput' placeholder='http://...' required='true'}}

            .row
              .large-3.columns
                %label.right.inline{:for => :descriptionInput}
                  = _('Description')
              .large-9.columns.end
                {{view Ember.TextArea valueBinding='content.description' id='descriptionInput' placeholder='What is this project about...' required='true'}}
            .row
              .large-9.large-offset-3.columns
                %input#project-save.button.primary{:type => :submit, :value => 'Create'}
                %a.button.secondary.right{:_action => 'cancel'}
                  Cancel
