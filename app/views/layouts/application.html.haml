!!! 5
%html
  %head
    %title
      = content_for?(:title) ? yield(:title) : _('Welcome')
      &bull;
      = Doers::Config.app_name

    = favicon_link_tag(image_path('favicon.ico'), :type => 'image/x-icon', :rel => 'shortcut icon')

    %meta{ :charset => 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    %meta{ :name => 'viewport', :content => 'width=device-width' }
    %meta{ :name => :generator, :content => Doers::Config.app_id }

    /[if lt IE 9]
      %script{ :src => 'http://html5shiv.googlecode.com/svn/trunk/html5.js' }

    = stylesheet_link_tag 'application'
    = yield(:head_embed) if content_for?(:head_embed)
    = csrf_meta_tags

  %body

    = render('shared/topbar')
    = render('shared/alerts')

    .wrapper
      .content{:role => :main}
        = yield

    %footer.footer{:role => :contentinfo}
      = render('shared/footer')

    = javascript_include_tag 'application'
    = yield(:footer_embed) if content_for?(:footer_embed)
